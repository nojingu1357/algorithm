#include <iostream>
#include <deque>
#include <cstring>

using namespace std;

int main(){
    
    int n,k;
    cin>>n>>k;

    deque<int> d;
    int visit[100001]={0,};

    if(n!=k){
        d.push_back(n);
        while(!d.empty()){
            n=d.front();
            if(n-1>=0&&visit[n-1]==0){
                visit[n-1]=visit[n]+1;
                d.push_back(n-1);
            }
            if(n+1<100001&&visit[n+1]==0){
                visit[n+1]=visit[n]+1;
                d.push_back(n+1);
            }
            if(2*n<100001&&visit[2*n]==0){
                visit[2*n]=visit[n]+1;
                d.push_back(2*n);
            }
            d.pop_front();
        }
    }

    cout<<visit[k]<<endl;

    return 0;
}
